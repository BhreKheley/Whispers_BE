    "definitions": {
        "dto.AdminLoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "dto.CheckInRequest": {
            "type": "object",
            "required": [
                "tiket_kode"
            ],
            "properties": {
                "tiket_kode": {
                    "type": "string"
                }
            }
        },
        "dto.CreateBookingRequest": {
            "type": "object",
            "required": [
                "email_pemesan",
                "metode_pembayaran",
                "nama_pemesan",
                "no_hp",
                "seat_ids"
            ],
            "properties": {
                "email_pemesan": {
                    "type": "string"
                },
                "metode_pembayaran": {
                    "type": "string",
                    "enum": [
                        "qris",
                        "transfer"
                    ]
                },
                "nama_pemesan": {
                    "type": "string"
                },
                "no_hp": {
                    "type": "string"
                },
                "seat_ids": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
